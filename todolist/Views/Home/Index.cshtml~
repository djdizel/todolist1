@model IEnumerable<todolist.Models.TaskItem>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>To-Do List</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<div class="container">
    <h2>Список задач</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Название</th>
            <th>Статус</th>
            <th>Действие</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@task.Id" />
                        <input type="checkbox" @if (task.IsCompleted) { <text>checked</text> } onclick="this.form.submit()" />
                    </form>
                </td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@task.Id" />
                        <input type="submit" value="Удалить" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <h3>Добавить новую задачу</h3>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Title">Название задачи</label>
            <input type="text" name="Title" class="form-control" placeholder="Введите название задачи" required />
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
</div>
</body>
